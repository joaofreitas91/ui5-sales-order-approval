<mvc:View
    controllerName="com.lab2dev.salesorderapproval.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <List
                headerText="Custom Content"
                items="{path: '/SalesOrderDraft'}"
            >
                <CustomListItem>
                    <HBox>
                        <core:Icon
                            size="2rem"
                            src="sap-icon://attachment-photo"
                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                        />
                        <VBox
                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                        >
                            <Link
                                text="{Name}"
                                target="{ProductPicUrl}"
                                press="handlePress"
                            />
                            <Label text="{ProductId}" />
                        </VBox>
                    </HBox>
                </CustomListItem>
            </List>
        </content>
    </Page>
</mvc:View>
